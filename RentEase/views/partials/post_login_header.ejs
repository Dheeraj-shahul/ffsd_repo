<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap");
      :root {
    --primary-color: #2563eb;        /* Blue */
    --primary-dark: #1d4ed8;
    --secondary-color: #0ea5e9;      /* Light Blue */
    --accent-color: #f59e0b;         /* Orange accent */
    --dark-color: #111827;           /* Near Black */
    --text-color: #374151;           /* Dark Gray for text */
    --text-light: #6b7280;           /* Light Gray for secondary text */
    --light-color: #f9fafb;          /* Off-White */
    --border-color: #e5e7eb;         /* Light Gray for borders */
    --danger-color: #ef4444;         /* Red */
    --success-color: #10b981;        /* Green */
    --warning-color: #f59e0b;        /* Orange */
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --radius-sm: 0.125rem;
    --radius: 0.25rem;
    --radius-md: 0.375rem;
    --radius-lg: 0.5rem;
    --radius-full: 9999px;
}
      body {
        font-family: "Poppins", sans-serif;
        
      }

      #header {
        position: fixed;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--dark-color);
        color: white;
        width: 100vw;
        padding-right: 0px;
        padding-left: 0px;
        padding-top: 5px;
        padding-bottom: 5px;
        height: 10vh;
        z-index: 1000;
        margin: 0px;
        top: 0px;
      }

      #header #brandid {
        font-size: 24px;
        font-weight: bold;
        color: #ffc107;
        padding-left: 10px;
      }

      #header #tagline {
        font-size: 12px;
        font-style: italic;
        color: #ddd;
        padding-left: 10px;
      }

      #header nav {
        display: flex;
        gap: 15px;
      }

      #header nav a {
        text-decoration: none;
        color: white;
        font-size: 16px;
        transition: color 0.3s;
      }

      

      #header .cta {
        display: flex;
        gap: 10px;
        margin-right: 2%;
      }

      #header .cta a {
        padding: 8px 12px;
        background-color: #ffc107;
        color: black;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
      }

      .cta a:hover {
        background-color: #e0a800;
      }

      #header .nav-toggle {
        display: none;
        font-size: 24px;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        margin-right: 15px;
        z-index: 2000;
      }

      #header .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }

      #header .overlay.active {
        display: block;
      }
      #header .nav-toggle:hover{
          color: #ff6f00;
        }
        #header .cta a:hover {
          background-color: #ff6f00;
        }

      

      @media (max-width: 768px) {
        #header .nav-toggle {
          display: block;
          position: absolute;
          right: 0px;
          background-color: #333;
          color: #ffc107;
          padding: 5px 10px;
          border-radius: 5px;
          z-index: 1100;
          
        }
        

        /* Initially hide the nav links */
        #header #nav-menu {
          visibility: hidden;
          opacity: 0;
          max-height: 0;
          overflow: hidden;
          flex-direction: column;
          position: absolute;
          top: 10vh;
          left: 60%;
          width: 40%;
          background-color: #333;
          text-align: center;
          transition: opacity 0.3s ease-in-out, max-height 0.3s ease-in-out;
          padding: 0;
          z-index: 1000;
          justify-content: center;
          align-items: center;
          height: fit-content;
          display: flex;
        }

        #header #nav-menu a {
          width: 70%;
          display: block;
          padding: 10px;
          font-size: 16px;
          color: white;
          text-decoration: none;
          border-bottom: 1px solid gray;
        }

        #header #nav-menu a:hover {
          background-color: #444;
          
        }

        /* Show menu when active */
        #header #nav-menu.active {
          visibility: visible;
          opacity: 1;
          max-height: 500px; /* Adjust this value as needed */
          padding: 10px 5px 0px 5px;
        }

        #header .cta {
          position: absolute;
          right: 50px;
          margin-right:50px;
          
        }

        #header .cta a {
          padding: 6px 10px;
          font-size: 12px;
          
        }

        #header .nav-toggle:hover{
          color: #ff6f00;
        }
        #header .cta a:hover {
          background-color: #ff6f00;
        }
        #header .nav-toggle{
          font-size:35px;
          
        }

        
        
        
      }
      @media(max-width:480px){
        #header #tagline{
          font-size:9px;
        }
        #header .nav-toggle{
          margin-right:0px;
          font-size:30px;
        }
        #header .cta a{
          margin-right:-10px;
          font-size:10px;
        }
        #header .cta a:hover{
          padding:4px;
          margin-left:4px;
          
          
        

          
          
        }
        #header .nav-toggle:hover{
          color: #ff6f00;
        }
        #header .cta {
          position: absolute;
          right: 50px;
          margin-right:10px;
          
          
        }
        
      }
    </style>
  </head>
  <body>
    <div id="header">
      <div id="logo">
        <div id="brandid">RentEase</div>
        <div id="tagline">Your One-Stop Rental Solution</div>
      </div>
      <!-- button for mobile nav bar -->
      <button class="nav-toggle" onclick="toggleNav()">â˜°</button>

      <!-- nav bar -->
      <nav id="nav-menu">
        <a href="/">Home</a>
        <a href="/search">Properties</a>
        <a href="#">Services</a>
        <a href="#">About Us</a>
        <a href="#">Contact Us</a>
        <a href="#">FAQs</a>
      </nav>
      <div class="cta">
        <a href="/login">hey user</a>
      </div>
      <div class="overlay" id="overlay"></div>
    </div>

    <!-- html code ends -->

    <!-- java script code for header -->

    <script>
      function toggleNav() {
        const navMenu = document.getElementById("nav-menu");
        const overlay = document.getElementById("overlay");

        if (navMenu.classList.contains("active")) {
          navMenu.classList.remove("active");
          overlay.classList.remove("active");
        } else {
          navMenu.classList.add("active");
          overlay.classList.add("active");
        }
      }

      // Add event listener to overlay
      document.getElementById("overlay").addEventListener("click", function () {
        const navMenu = document.getElementById("nav-menu");
        navMenu.classList.remove("active");
        this.classList.remove("active");
      });
    </script>

    <!-- javascript ends -->
  </body>
</html>
