        margin: 2rem auto;
        padding: 0 1rem;
        margin-top: 60px;
      }

      .page-title {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--secondary-color);
      }

      .filter-toggle-btn {
        display: none;
      }

      .filter-container {
        background-color: var(--white);
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
