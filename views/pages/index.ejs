        if (screenWidth >= 1024) return 2;
        if (screenWidth >= 768) return 1;
        if (screenWidth <= 480) return 1; // Explicitly handle 480px and smaller screens
        return 1;
      }

      function updateSlider1() {
        const slider = document.querySelector(".slider");
        if (!slider) return;

        const cards = document.querySelectorAll(".card");
        if (cards.length === 0) return;

        // Get the actual width of a card including margin
        const card = cards[0];
        const cardStyle = window.getComputedStyle(card);
        const marginRight = parseInt(cardStyle.marginRight) || 0;
        const marginLeft = parseInt(cardStyle.marginLeft) || 0;

        // Calculate total width including margins
        const totalCardWidth = card.offsetWidth + marginRight + marginLeft;

        // Apply the transform with the proper width calculation
        slider.style.transform = `translateX(-${
          currentIndex2 * totalCardWidth
        }px)`;
      }

      function nextSlide1() {
        const totalCards = document.querySelectorAll(".card").length;
        const visibleCards = getVisibleCards();
        const maxIndex = Math.max(0, totalCards - visibleCards);

        if (currentIndex2 < maxIndex) {
          currentIndex2++;
          updateSlider1();
        }
      }

      function prevSlide1() {
        if (currentIndex2 > 0) {
          currentIndex2--;
          updateSlider1();
        }
      }

      // Initialize slider on page load and window resize
      window.addEventListener("load", updateSlider1);
      window.addEventListener("resize", () => {
        // Reset index if we're beyond the max index after resize
        const totalCards = document.querySelectorAll(".card").length;
        const visibleCards = getVisibleCards();
        const maxIndex = Math.max(0, totalCards - visibleCards);

        if (currentIndex2 > maxIndex) {
          currentIndex2 = maxIndex;
        }

        updateSlider1();
      });

      // Make the functions available globally
      window.prevSlide1 = prevSlide1;
      window.nextSlide1 = nextSlide1;
      window.updateSlider1 = updateSlider1;
      window.getVisibleCards = getVisibleCards;

      // Articles grid functionality
      let currentIndex = 0;
      const articlesGrid = document.getElementById("articlesGrid");
      let totalArticles = 0;
      let articlesPerPage;

      // Check if articlesGrid exists before continuing
      if (articlesGrid) {
        totalArticles = document.querySelectorAll(".article-card").length;

        function updateArticlesPerPage() {
          if (window.innerWidth <= 480) {
            articlesPerPage = 1; // Mobile: 1 per view
          } else if (window.innerWidth <= 768) {
            articlesPerPage = 2; // Tablet: 2 per view
          } else {
            articlesPerPage = 4; // Desktop: 4 per view
          }
        }

        function moveLeft() {
          if (currentIndex > 0) {
            currentIndex--;
            updateGrid();
          }
        }

        function moveRight() {
          const maxIndex = Math.ceil(totalArticles / articlesPerPage) - 1;
          if (currentIndex < maxIndex) {
            currentIndex++;
            updateGrid();
          }
        }

        function updateGrid() {
          const offset = -currentIndex * 100;
          articlesGrid.style.transform = `translateX(${offset}%)`;
        }

        // Improved Touch Event Listeners
        let touchStartX = 0;
        let touchStartY = 0;
        let touchEndX = 0;
        let touchEndY = 0;

        articlesGrid.addEventListener(
          "touchstart",
          (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
          },
          { passive: true }
        );

        articlesGrid.addEventListener(
          "touchmove",
          (e) => {
            touchEndX = e.touches[0].clientX;
            touchEndY = e.touches[0].clientY;
          },
          { passive: true }
        );

        articlesGrid.addEventListener(
          "touchend",
          () => {
            handleArticlesSwipe();
          },
          { passive: true }
        );

        function handleArticlesSwipe() {
          const xDiff = touchStartX - touchEndX;
          const yDiff = touchStartY - touchEndY;

          // Only trigger swipe if the horizontal movement is greater than vertical movement
          if (Math.abs(xDiff) > Math.abs(yDiff)) {
            if (xDiff > swipeThreshold1) {
              // Swipe left ‚Üí Load next articles
              moveRight();
            } else if (xDiff < -swipeThreshold1) {
              // Swipe right ‚Üí Load previous articles
              moveLeft();
            }
          }
          // Otherwise, allow vertical scrolling
        }

        // Update articles per page on window resize
        window.addEventListener("resize", () => {
          updateArticlesPerPage();
          updateGrid();
        });

        // Initialize
        updateArticlesPerPage();
      }

      // Function to observe sections
      function observeSections() {
        const sections = document.querySelectorAll(".hidden-section");

        if (sections.length === 0) {
          return; // No sections to observe
        }

        // Options for the observer
        const options = {
          root: null, // Use the viewport as the root
          rootMargin: "0px", // No margin
          threshold: 0.09, // Trigger when 9% of the section is visible
        };

        // Callback function for the observer
        const callback = (entries, observer) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              // Add the "show" class when the section is in view
              entry.target.classList.add("show");
              // Optionally stop observing after the section is shown
              observer.unobserve(entry.target);
            }
          });
        };

        // Create the observer
        const observer = new IntersectionObserver(callback, options);

        // Observe each section
        sections.forEach((section) => {
          observer.observe(section);
        });
      }

      // Run the observer when the page loads
      window.addEventListener("load", observeSections);

      // Add touch swipe functionality to the slider
      function addTouchSwipeToSlider() {
        const sliderContainer = document.querySelector(".slider-container");
        if (!sliderContainer) return;

        let touchStartX = 0;
        let touchEndX = 0;
        const swipeThreshold = 10; // Minimum distance required for swipe

        // Touch event listeners
        sliderContainer.addEventListener(
          "touchstart",
          (e) => {
            touchStartX = e.touches[0].clientX;
          },
          { passive: true }
        );

        sliderContainer.addEventListener(
          "touchmove",
          (e) => {
            touchEndX = e.touches[0].clientX;
          },
          { passive: true }
        );

        sliderContainer.addEventListener(
          "touchend",
          () => {
            handleSliderSwipe();
          },
          { passive: true }
        );

        // Function to handle swipe
        function handleSliderSwipe() {
          // Calculate swipe distance
          const swipeDistance = touchStartX - touchEndX;

          // Check if swipe was significant enough
          if (Math.abs(swipeDistance) > swipeThreshold) {
            if (swipeDistance > 0) {
              // Swiped left - go to next slide
              nextSlide1();
            } else {
              // Swiped right - go to previous slide
              prevSlide1();
            }
          }
        }
      }

      // Call the function when the document is loaded
      document.addEventListener("DOMContentLoaded", () => {
        addTouchSwipeToSlider();
      });
    </script>
