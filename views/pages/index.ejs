              // Check if horizontal scroll is significant
              if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
                // Don't use preventDefault here - use passive listener instead

                if (currentTime - lastScrollTime1 > throttleTime1) {
                  if (e.deltaX > scrollThreshold1) {
                    prevProperty();
                  } else if (e.deltaX < -scrollThreshold1) {
                    nextProperty();
                  }
