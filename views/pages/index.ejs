        function startCarousel() {
          stopCarousel(); // Clear any existing intervals before starting
          carouselInterval1 = setInterval(nextProperty, 10000000);
        }

        // Function to stop the carousel
        function stopCarousel() {
          clearInterval(carouselInterval1);
        }

